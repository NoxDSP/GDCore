# ==============================================
# GDCore - Geometry Dash Private Server
# ==============================================
# SECURITY WARNING: Never commit .env to Git!
# Copy this file to .env and configure

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gdcore
DB_USER=gdcore_user
DB_PASS=CHANGE_THIS_PASSWORD

# ==============================================
# Server Configuration
# ==============================================
SERVER_NAME="GDCore GDPS"
DEBUG_MODE=false
SERVER_URL=https://yourdomain.com

# ==============================================
# Security
# ==============================================
SECRET_KEY=GENERATE_YOUR_SECRET_KEY_HERE

# ==============================================
# Feature Toggles
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=true
ENABLE_MESSAGES=true
ENABLE_FRIEND_REQUESTS=true

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=60
